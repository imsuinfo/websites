  $items = array();

  $items['admin/content/management/emergency'] = array(
    'title' => "Emergency",
    'description' => "View emergency status and/or manage emergency settings.",
    'page callback' => 'mcneese_management_emergency_page',
    'page arguments' => array(),
    'file' => 'mcneese_management_emergency_page.inc',
    'file path' => drupal_get_path('module', 'mcneese_management') . '/pages',
    'access callback' => 'user_access',
    'access arguments' => array('mcneese management emergency'),
    'tab_parent' => 'admin/content/management/emergency',
    'tab_root' => 'admin/content/management/emergency',
    'type' => MENU_LOCAL_TASK,
  );

  $items['admin/content/management/emergency/settings'] = array(
    'title' => "Emergency Settings",
    'description' => "Change emergency settings.",
    'page callback' => 'drupal_get_form',
    'page arguments' => array('mcneese_management_emergency_settings_page'),
    'file' => 'mcneese_management_emergency_page.inc',
    'file path' => drupal_get_path('module', 'mcneese_management') . '/pages',
    'access callback' => 'user_access',
    'access arguments' => array('mcneese management emergency'),
    'tab_parent' => 'admin/content/management/emergency',
    'tab_root' => 'admin/content/management/emergency',
    'type' => MENU_LOCAL_TASK,
