function mfcs_management_page_access() {
  if (user_access('mfcs administer') || user_access('mfcs manage') || user_access('mfcs review')) {
    return TRUE;
  }

  return FALSE;
}

/**
 * Implements hook_cronapi().
 */
function mfcs_cronapi() {
